<figure class="{{component}}__item">

  {% if post.image %}
    {% include 'components/image.twig' with { image: TimberImage(post.get_field('image')) } %}
  {% endif %}

  <figcaption>
    <h3 class="{{component}}__headline">{{post.title}}</h3>
    <p class="{{component}}__text">{{post.content}}</p>
  </figcaption>

</figure>
